{% extends 'base.html.twig' %}

{% block title %}{{'register'|trans|capitalize}} - {{'Real estate agency'|trans}}{% endblock %}

{% block body %}
  <section class="form-section">

    <h1>{{'register'|trans}}</h1>

    {{ form_start(registrationForm) }}
			<div class="form-control-group">
				{% for flashError in app.flashes('verify_email_error') %}
        	<div class="alert alert-danger" role="alert">{{ flashError }}</div>
    		{% endfor %}
			</div>
			<div class="form-control-group">
				{{ form_label(registrationForm.firstname, null, {'label': 'firstname'|trans|capitalize}) }}&nbsp;<i class="fa fa-caret-right"></i>
				{{ form_widget(registrationForm.firstname) }}
			</div>
			<div class="form-control-group">
				{{ form_label(registrationForm.lastname, null, {'label': 'lastname'|trans|capitalize}) }}&nbsp;<i class="fa fa-caret-right"></i>
				{{ form_widget(registrationForm.lastname) }}
			</div>
			<div class="form-control-group">
				{{ form_label(registrationForm.address, null, {'label': 'address'|trans|capitalize}) }}&nbsp;<i class="fa fa-caret-right"></i>
				{{ form_widget(registrationForm.address) }}
			</div>
			<div class="form-control-group">
				{{ form_label(registrationForm.phone_number, null, {'label': 'phone number'|trans|capitalize}) }}&nbsp;<i class="fa fa-caret-right"></i>
				{{ form_widget(registrationForm.phone_number) }}
				<div class="input-checkbox-group">
					{{ form_widget(registrationForm.public_phone) }}
					<label for="registration_form_public_phone"><span><i class="fa fa-check"></i></span><i class="fa fa-caret-left"></i>&nbsp;{{'I agree to provide my phone number on the website'|trans}}</label>
				</div>
			</div>
			<div class="form-control-group">
				{{ form_label(registrationForm.email, null, {'label': 'email address'|trans|capitalize}) }}&nbsp;<i class="fa fa-caret-right"></i>
				{{ form_widget(registrationForm.email) }}
			</div>
			<div class="form-control-group">
				{{ form_label(registrationForm.plainPassword, null, {'label': 'password'|trans|capitalize}) }}&nbsp;<i class="fa fa-caret-right"></i>
				{{ form_widget(registrationForm.plainPassword) }}
			</div>
			<div class="form-control-group">
				{{ form_label(registrationForm.confirmPassword, null, {'label': 'Confirm password'|trans}) }}&nbsp;<i class="fa fa-caret-right"></i>
				{{ form_widget(registrationForm.confirmPassword) }}
			</div>
			<div class="form-control-group">
				<div class="input-checkbox-group">
					{{ form_widget(registrationForm.agreeTerms) }}
					<label for="registration_form_agreeTerms"><span><i class="fa fa-check"></i></span><i class="fa fa-caret-left"></i>&nbsp;{{'Agree terms'|trans}}</label>
				</div>
			</div>
			<div class="form-button-submit-right">
				<button type="submit" class="button button-rounded button-outline">{{'register'|trans}}</button>
			</div>
    {{ form_end(registrationForm) }}
	</section>
{% endblock %}
{% block javascripts %}
  <script src="{{ asset('assets/js/validationForm.js') }}"></script>
{% endblock %}