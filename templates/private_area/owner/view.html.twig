{% extends 'base.html.twig' %} 

{% block title %}{{ "private area" | trans | capitalize }} - {{ "Real estate agency" | trans }} {% endblock %}

{% block body %}
<main id="private-area-main">
	{% include "private_area/_header_user.html.twig" %}
	{% for message in app.flashes('message_alert') %}
    {{ include('include/_alert.html.twig') }}
  {% endfor %}
	<h2>{{'owner no'|trans|capitalize}}&nbsp;{{ owner.id }}</h2>
	<div class="view-informations">
		<h3><i class="fa fa-user"></i>&nbsp;{{ 'personal informations'|trans|capitalize }} :</h3>
		<ul>
			<li><strong>{{ 'lastname'|trans|capitalize }} : </strong>{{ owner.lastname }}</li>
			<li><strong>{{ 'firstname'|trans|capitalize }} : </strong>{{ owner.firstname }}</li>
			<li><strong>{{ 'address'|trans|capitalize }} : </strong>{{ owner.address }}</li>
			<li><strong>{{ 'email'|trans|capitalize }} : </strong>{{ owner.email }}</li>
			<li><strong>{{ 'phone number'|trans|capitalize }} : </strong>{{ owner.phoneNumber }}</li>
		</ul>
		<h3><i class="fa fa-building"></i>&nbsp;{{ 'properties informations'|trans|capitalize }} :</h3>
		<ul>
			<li><strong>{{ 'number of properties'|trans|capitalize }} : </strong>{{ owner.ownerProperties|length }}</li>
			<li><strong>{{ 'number of properties rented'|trans|capitalize }} : </strong></li>
		</ul>
	</div>
	<a href="{{ path('referer') }}" class="button button-rounded button-small"><i class="fa fa-arrow-left"></i>&nbsp;{{ 'back to list'|trans }}</a>
</main>
{% endblock %}

