{% extends 'base.html.twig' %}

{% block title %}{{'password reset email sent'|trans|capitalize}} - {{'Real estate agency'|trans}}{% endblock %}

{% block body %}
    <section class="form-section">
		<h1></h1>
        <div class="form-control-group">
            <p>
                {{'If an account matching your email exists, then an email was just sent that contains a link that you can use to reset your password.'|trans}}
            </p>
            <p>
                {{'This link will expire in'|trans}} {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
            </p>
            <br>
            <p>{{'If you don\'t receive an email please check your spam folder or'|trans}} <a class="underlined-link" href="{{ path('app_forgot_password_request') }}">{{'try again'|trans}}</a>.</p>
        </div>
        <div class="form-button-submit-right">
            <a href="{{ path('home') }}" role="button" class="button button-rounded button-outline button-fit"><i class="fa fa-home"></i>&nbsp;{{'back to homepage'|trans}}</a>
        </div>
	</section>
{% endblock %}
